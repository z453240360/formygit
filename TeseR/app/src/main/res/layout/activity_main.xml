<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/b1"
    android:fitsSystemWindows="true"
    tools:context="com.example.administrator.teser.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/bacg" />

    <!--非华为手机 -->
    <!--<ImageView-->
        <!--android:id="@+id/img1"-->
        <!--android:visibility="visible"-->
        <!--android:layout_width="202dp"-->
        <!--android:layout_height="250dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="125dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@mipmap/tc" />-->


    <ImageView
        android:id="@+id/img1"
        android:visibility="visible"
        android:layout_width="202dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:scaleType="fitXY"
        android:src="@mipmap/tc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:gravity ="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/myrl"
        android:layout_width="194dp"
        android:layout_height="240dp"
        android:visibility="invisible"
        android:layout_alignLeft="@id/recycler_view"
        android:layout_alignRight="@id/recycler_view"
        android:layout_marginTop="114dp"
        android:background="@mipmap/tansuoqi">

        <TextView
            android:id="@+id/mTxt_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_margin="5dp"
            android:background="@mipmap/kuang"
            android:gravity="center"
            android:text="收"
            android:textColor="#000"
            android:textSize="55dp" />

        <TextView
            android:id="@+id/mTxt_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mTxt_1"
            android:scrollbars="horizontal"
            android:text="shou"
            android:textColor="#000"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/mBtn_txtshow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/mTxt_2"
            android:scaleType="fitXY"
            android:layout_alignLeft="@id/mTxt_2"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/laba" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/zhong" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/img5"
            android:layout_alignTop="@id/img5"
            android:layout_alignBottom="@id/img5"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/you" />

        <ImageView
            android:layout_alignTop="@id/img5"
            android:layout_alignBottom="@id/img5"
            android:id="@+id/img4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/img5"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginRight="10dp"
            android:src="@mipmap/zuo" />

        <TextView
            android:id="@+id/mTxt_3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mTxt_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="基本解释:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mTxt_4"
            android:layout_above="@id/img5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTxt_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:text="事实上是是是是是"
            android:layout_marginBottom="2dp"
            android:textColor="#000"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/general_button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick" />

        <Button
            android:id="@+id/mBtn_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="onClick" />
    </LinearLayout>

</RelativeLayout>
