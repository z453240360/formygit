<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.administrator.teser.MainActivity">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:src="@mipmap/bacg" />

    <ImageView
        android:scaleType="fitXY"
        android:gravity="center"
        android:id="@+id/img1"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="41%"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="22%"
        app:layout_widthPercent="55%"
        android:src="@mipmap/tc"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="41%"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="22%"
        app:layout_widthPercent="55%"
        android:visibility="visible" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/myrl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="41%"
        app:layout_marginTopPercent="21%"
        app:layout_marginLeftPercent="23%"
        android:visibility="invisible"
        app:layout_widthPercent="55%"
        android:background="@mipmap/tansuoqi">

        <TextView
            android:id="@+id/mTxt_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="10%"
            android:background="@mipmap/kuang"
            android:gravity="center"
            android:text="你"
            android:textSize="20sp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/mTxt_2"

            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="10%"
            android:layout_toRightOf="@id/mTxt_1"
            android:scrollbars="horizontal"
            android:text="shou"
            android:textColor="#000"
            />

        <ImageView
            android:id="@+id/mBtn_txtshow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="50%"
            android:layout_below="@id/mTxt_2"

            android:scaleType="fitXY"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/laba" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="2%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="50%"
            android:layout_alignParentBottom="true"

            android:src="@mipmap/zhong" />

        <ImageView
            android:id="@+id/img2"

            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="20%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="60%"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/you" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="20%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="20%"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/zuo" />

        <TextView
            android:id="@+id/mTxt_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="30%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="10%"
            android:layout_below="@id/mTxt_1"

            android:text="基本解释:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mTxt_4"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="10%"
            android:layout_below="@id/mTxt_3"
            android:layout_above="@id/img4"
            android:text="事实上是是是是是"
            android:textColor="#000"
            />


    </android.support.percent.PercentRelativeLayout>

        <Button
            android:id="@+id/general_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="17%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginTopPercent="72%"
            android:onClick="onClick" />

        <Button
            android:id="@+id/mBtn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="17%"
            app:layout_marginLeftPercent="53%"
            app:layout_marginTopPercent="72%"
            android:onClick="onClick" />


</android.support.percent.PercentRelativeLayout>
