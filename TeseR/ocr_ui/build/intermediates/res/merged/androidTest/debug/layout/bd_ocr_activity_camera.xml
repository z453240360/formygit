<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/take_picture_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/bd_ocr_take_picture"/>

    <include
            android:id="@+id/crop_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            layout="@layout/bd_ocr_crop"/>

    <include
            android:id="@+id/confirm_result_container"
            layout="@layout/bd_ocr_confirm_result"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.baidu.ocr.ui.camera.MyMaskView
        android:id="@+id/mMyMaskView"
        android:layout_above="@id/confirm_result_container"
        android:layout_marginBottom="160dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />





    <Button
        android:id="@+id/mBtn_cDa"
        android:text="放大"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
